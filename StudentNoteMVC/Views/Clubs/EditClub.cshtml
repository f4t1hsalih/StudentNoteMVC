@model StudentNoteMVC.Models.EntityFramework.tbl_clubs

@{
    ViewBag.Title = "EditClub";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("EditClub", "Clubs", method: FormMethod.Post))
{
    <div class="form-horizontal">
        <h2>Kulüp Güncelleme</h2>
        <hr />
        @Html.HiddenFor(model => model.clb_id)

        <div class="form-group">
            @Html.LabelFor(model => model.clb_name, labelText: "Kulüp Adı")
            @Html.EditorFor(model => model.clb_name, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.clb_quota, labelText: "Kulüp Konteyjanı")
            @Html.EditorFor(model => model.clb_quota, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            <input type="submit" value="Güncelle" class="btn btn-info" />
        </div>
    </div>
}

