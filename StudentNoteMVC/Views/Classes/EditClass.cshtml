@model StudentNoteMVC.Models.EntityFramework.tbl_classes

@{
    ViewBag.Title = "Ders Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ders Güncelle</h2>
<hr />

@using (Html.BeginForm("EditClass", "Classes"))
{
    @Html.HiddenFor(m => m.cls_id)

    <div class="form-group">
        @Html.LabelFor(m => m.cls_name, labelText: "Ders Adı")
        @Html.TextBoxFor(m => m.cls_name, htmlAttributes: new { @class = "form-control" })
    </div>

    <div class="form-group">
        <input type="submit" value="Güncelle" class="btn btn-info" />
        <a href="@Url.Action("Index", "Classes")" class="btn btn-secondary">İptal</a>
    </div>
}
