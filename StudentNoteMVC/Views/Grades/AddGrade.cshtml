
@{
    ViewBag.Title = "Not Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Not Ekle</h2>

<form method="post" class="form form-group">
    <div class="form-group">
        <label>Ders</label>
        @Html.DropDownList("Classes", null, "Ders Seçin", new { @class = "form-control", required = "required" })
    </div>
    <div class="form-group">
        <label>Öğrenci</label>
        @Html.DropDownList("Students", null, "Öğrenci Seçin", new { @class = "form-control", required = "required" })
    </div>
    <div class="form-group">
        <label for="exam1">Sınav1</label>
        <input type="number" id="exam1" name="grd_exam1" class="form-control">
    </div>
    <div class="form-group">
        <label for="exam2">Sınav2</label>
        <input type="number" id="exam2" name="grd_exam2" class="form-control">
    </div>
    <div class="form-group">
        <label for="exam3">Sınav1</label>
        <input type="number" id="exam3" name="grd_exam3" class="form-control">
    </div>
    <div class="form-group">
        <label for="project">Proje</label>
        <input type="number" id="project" name="grd_project" class="form-control">
    </div>
    <div class="form-group">
        <label for="average">Ortalama</label>
        <input type="number" id="average" name="grd_average" class="form-control">
    </div>
    <div class="form-group">
        <label for="status">Durum</label>
        <input type="text" id="status" name="grd_status" class="form-control">
    </div>
    <button type="submit" class="btn btn-success">Kaydet</button>
</form>
