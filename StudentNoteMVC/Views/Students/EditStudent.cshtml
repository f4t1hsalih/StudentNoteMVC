@model StudentNoteMVC.Models.EntityFramework.tbl_students

@{
    ViewBag.Title = "EditStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{

    <div class="form-horizontal">
        <h2>Öğrenci Düzenle</h2>
        <hr />
        @Html.HiddenFor(model => model.std_id)

        <div class="form-group">
            @Html.LabelFor(model => model.std_name, labelText: "Öğrenci Adı")
            @Html.EditorFor(model => model.std_name, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.std_surname, labelText: "Öğrenci Soyadı")
            @Html.EditorFor(model => model.std_surname, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.std_photo, labelText: "Öğrenci Fotoğrafı")
            @Html.EditorFor(model => model.std_photo, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.std_gender, labelText: "Öğrenci Cinsiyeti")
            @Html.DropDownList("std_gender", ViewBag.Genders as SelectList, htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.std_clb_id, labelText: "Öğrenci Kulübü")
            @Html.DropDownList("std_clb_id", ViewBag.Clubs as SelectList, htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="form-group">
            <input type="submit" value="Güncelle" class="btn btn-info" />
        </div>
    </div>
}

